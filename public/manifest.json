{
  "manifest_version": 3,
  "name": "Cookie 管理器",
  "version": "1.0.0",
  "description": "一个强大的 Cookie 管理工具",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "action": {
    "default_title": "Cookie 管理器",
    "default_popup": "index.html",
    "default_width": 800,
    "default_height": 600
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
